@{
   ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
   <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
   </ol>
   <div class="carousel-inner" role="listbox">
      <div class="item active">
         <img src="~/images/ASP-NET-Banners-01.png" alt="ASP.NET" class="img-responsive">
         <div class="container">
            <div class="carousel-caption">
               <p>
                  Learn how to use People Tracker.
                  <a asp-controller="Home" asp-action="About" class="btn btn-default btn-default">Learn More</a>
               </p>
            </div>
         </div>
      </div>
      <div class="item">
         <img src="~/images/ASP-NET-Banners-02.png" alt="Visual Studio" class="img-responsive">
         <div class="container">
            <div class="carousel-caption">
               <p>
                  No one can hide from People Tracker.
                  <a asp-controller="Home" asp-action="Contact" class="btn btn-default btn-default">Learn More</a>
               </p>
            </div>
         </div>
      </div>
   </div>
</div>

